#include <iostream>
#include <string>
using namespace std;

int main()
{

	/* Write a program which asks the user to enter his / her height(in meters, as double)
	and the weight(in kilograms, also as a double).Then the program should print
	his / her BMI coefficient(body mass index) defined as the weight in kilograms divided
	by the square of height in meters â€” this number should come out close to 20.
	*/

	cout << "please enter your weight in kg";
	double weight;
	cin >> weight;
	cout << "please enter your height in m";
	double height;
	cin >> height;

	double bmi = weight / (height*height);


	if (bmi < 18)
		cout << " eat some food\n";
	else if (bmi > 25)
		cout << "eat less ";
	else if (18 > bmi < 25)
		cout << "doing good ";
	system("pause");
}
	 
